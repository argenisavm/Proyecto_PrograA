@model ProyectoPrograAvanzada.Models.LoginModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Ingresar", "Login", FormMethod.Post))
{
    <div>
        <p>
            @Html.DisplayNameFor(model => model.Users)
            @Html.TextBoxFor(model => model.Users)
        </p>
        <p>
            @Html.DisplayNameFor(model => model.Password)
            @Html.TextBoxFor(model => model.Password)
        </p>
    </div>

    <div>
        <button type="submit" class="btn btn-success">Ingresar</button>
        <button type="submit" class="btn btn-success">Salir</button>
    </div>
}
